# Crypto Analyzer GPT - Environment Variables Template
# Copy this file to .env and fill in your actual values

# Trading API Configuration
API_KEY=your_trading_api_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# Redis Configuration (optional, defaults to localhost)
REDIS_URL=redis://localhost:6379/0

# Telegram Bot Configuration
TG_BOT_TOKEN=your_telegram_bot_token_here
TG_CHAT_ID=your_telegram_chat_id_here

# News API Configuration
NEWS_API_KEY=your_news_api_key_here
CRYPTOPANIC_API_KEY=your_cryptopanic_api_key_here

# Environment Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Cache settings
CACHE_ENABLED=true
CACHE_TTL=300

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# API Configuration
API_TIMEOUT=30
MAX_INDICATORS=10
MAX_CANDLES=1000

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Deployment Configuration (Render.com)
RENDER_SERVICE_ID=your-service-id
RENDER_SERVICE_NAME=your-service-name
RENDER_SERVICE_URL=https://your-app-name.onrender.com

# Internal API URL (for production deployments)
INTERNAL_API_URL=http://localhost:8000

# Telegram Webhook URL (auto-configured from RENDER_SERVICE_URL)
TELEGRAM_WEBHOOK_URL=https://your-app-name.onrender.com/telegram/webhook
